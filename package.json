  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.13.0",
    "@prisma/client": "^6.13.0",
    "axios": "^1.13.3",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "express": "^5.2.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.2",
    "prisma": "^6.13.0",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
